# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/adlgo
REDIS_URL=redis://localhost:6379

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Authentication
JWT_SECRET=your_jwt_secret_min_32_characters

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Flutterwave (Payments)
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your_public_key
FLUTTERWAVE_SECRET_KEY=FLWSECK-your_secret_key
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST-your_encryption_key
FLUTTERWAVE_WEBHOOK_HASH=your_webhook_hash

# Termii (OTP/SMS)
TERMII_API_KEY=your_termii_api_key
TERMII_SENDER_ID=ADLgo

# Agora (Voice Calls)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# File Storage (Supabase Storage)
STORAGE_BUCKET_NAME=adlgo-uploads
